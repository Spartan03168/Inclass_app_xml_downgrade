<!-- activity_main.xml -->

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Replace the ComposeView with your other XML layout components -->
    <!-- You can use LinearLayout, RelativeLayout, etc. as needed -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/scifi_wallpaper" />

    <!-- Overlay Text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"
        android:background="#AA000000"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/overlayIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher_foreground"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/overlayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The travellers ship"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Rest of the UI components can be added here -->

</FrameLayout>
